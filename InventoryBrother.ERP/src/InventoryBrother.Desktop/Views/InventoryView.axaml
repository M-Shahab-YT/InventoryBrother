<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:InventoryBrother.Desktop.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="using:InventoryBrother.Desktop.Extensions"
             xmlns:mat="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             xmlns:matIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:h="clr-namespace:Huskui.Avalonia.Controls;assembly=Huskui.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
             x:Class="InventoryBrother.Desktop.Views.InventoryView"
             x:DataType="vm:InventoryViewModel">

    <Grid RowDefinitions="Auto, *">
        <!-- Toolbar / Search -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="24,16">
            <StackPanel Orientation="Horizontal" Spacing="20">
                <TextBox Width="320" 
                         mat:TextFieldAssist.Label="{loc:Localize Search}"
                         Watermark="{loc:Localize EnterNewItemName}" 
                         Text="{Binding SearchText}"
                         Classes="outline"/>
                
                <CheckBox Content="{loc:Localize inventory.LowStockOnly}" 
                          IsChecked="{Binding LowStockOnly}" 
                          VerticalAlignment="Center"/>
                
                <Button Command="{Binding LoadProductsCommand}" 
                        Classes="Primary" 
                        Padding="16,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <matIcons:MaterialIcon Kind="Magnify" Width="18"/>
                        <TextBlock Text="{loc:Localize Search}"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding ClearSearchCommand}" 
                        Classes="Outline" 
                        Content="{loc:Localize Refresh}"
                        BorderThickness="1"/>
                
                <Separator Width="1" Height="24" Margin="10,0" Background="{StaticResource BorderBrush}"/>
                
                <Button Command="{Binding AddProductCommand}" 
                        Classes="Primary"
                        Background="#10B981"> <!-- Specific Success Green -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <matIcons:MaterialIcon Kind="Plus" Width="18" Foreground="White"/>
                        <TextBlock Text="{loc:Localize inventory.AddProduct}"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding ExportToExcelCommand}" 
                        Classes="Outline"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <matIcons:MaterialIcon Kind="FileExport" Width="18"/>
                        <TextBlock Text="{loc:Localize Export}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Product List -->
        <Grid Grid.Row="1" Margin="24">
            <Border Background="White" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <Panel>
                    <DataGrid ItemsSource="{Binding Products}"
                               IsReadOnly="True"
                               GridLinesVisibility="Horizontal"
                               BorderThickness="0"
                               RowHeight="50">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{loc:Localize ID}" Binding="{Binding ProductCode}" Width="120"/>
                            <DataGridTextColumn Header="{loc:Localize Name}" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="{loc:Localize Barcode}" Binding="{Binding ProductBarCode}" Width="180"/>
                            <DataGridTextColumn Header="{loc:Localize Price}" Binding="{Binding SalePrice, StringFormat='N2'}" Width="120"/>
                            <DataGridTemplateColumn Header="{loc:Localize Stock}" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="10,4" CornerRadius="6" HorizontalAlignment="Right"
                                                Background="{Binding CurrentStock, Converter={StaticResource StockColorConverter}, ConverterParameter='Background'}">
                                            <TextBlock Text="{Binding CurrentStock, StringFormat='N2'}"
                                                       FontWeight="Bold"
                                                       FontSize="13"
                                                       Foreground="{Binding CurrentStock, Converter={StaticResource StockColorConverter}}"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="{loc:Localize Actions}" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                                            <Button Classes="Outline" Padding="8,4" BorderThickness="1">
                                                <matIcons:MaterialIcon Kind="Eye" Width="16" Foreground="{StaticResource PrimaryBrush}"/>
                                            </Button>
                                            <Button Classes="Outline" Padding="8,4" BorderThickness="1">
                                                <matIcons:MaterialIcon Kind="Pencil" Width="16" Foreground="{StaticResource SecondaryBrush}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <ProgressBar IsVisible="{Binding IsBusy}" 
                                 IsIndeterminate="True" 
                                 VerticalAlignment="Top" 
                                 Height="3"
                                 Margin="0,0,0,0"/>
                </Panel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
