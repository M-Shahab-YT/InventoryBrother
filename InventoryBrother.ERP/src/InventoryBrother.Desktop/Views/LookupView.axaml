<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:InventoryBrother.Desktop.ViewModels"
             xmlns:loc="using:InventoryBrother.Desktop.Extensions"
             xmlns:matIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="InventoryBrother.Desktop.Views.LookupView"
             x:DataType="vm:LookupViewModel">

    <Grid ColumnDefinitions="250, *" Margin="20">
        <!-- Sidebar: Lookup Types -->
        <Border Grid.Column="0" Background="#f8f9fa" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Margin="0,0,20,0" Padding="10">
            <StackPanel>
                <TextBlock Text="{loc:Localize LookupCategories}" FontSize="18" FontWeight="SemiBold" Margin="10,0,0,20"/>
                <ListBox ItemsSource="{Binding LookupTypes}" 
                         SelectedItem="{Binding SelectedType}" 
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Padding="10"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Main Content: Lookup List -->
        <Grid Grid.Column="1" RowDefinitions="Auto, Auto, *">
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="{Binding SelectedType}" FontSize="28" FontWeight="ExtraBold" Foreground="{StaticResource TextBrush}"/>
                <TextBlock Text="Manage system categorizations and lookup values" FontSize="14" Foreground="{StaticResource MutedTextBrush}" Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Actions -->
            <Border Grid.Row="1" Classes="card" Padding="16" Margin="0,0,0,24">
                <Grid ColumnDefinitions="*, Auto, Auto">
                    <TextBox Text="{Binding NewItemName}" 
                             Watermark="{loc:Localize EnterNewItemName}" 
                             Classes="outline"
                             MaxWidth="400"
                             HorizontalAlignment="Left"/>
                    
                    <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="12">
                        <Button Content="{loc:Localize AddNew}" 
                                Command="{Binding AddLookupCommand}" 
                                Classes="primary"/>
                        <Button Content="{loc:Localize Refresh}" 
                                Command="{Binding LoadLookupsCommand}"
                                Classes="outline"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Grid -->
            <Border Grid.Row="2" Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
                <DataGrid ItemsSource="{Binding Lookups}" 
                          SelectedItem="{Binding SelectedLookup}"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          GridLinesVisibility="All">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{loc:Localize ID}" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="{loc:Localize Name}" Binding="{Binding Name}" Width="*"/>
                        <DataGridTemplateColumn Header="{loc:Localize Actions}" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding $parent[UserControl].((vm:LookupViewModel)DataContext).DeleteLookupCommand}" 
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0">
                                        <matIcons:MaterialIcon Kind="Delete" Foreground="Red" Width="18"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <ProgressBar Grid.Row="2" VerticalAlignment="Top" IsIndeterminate="True" IsVisible="{Binding IsBusy}"/>
        </Grid>
    </Grid>
</UserControl>
