<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:InventoryBrother.Desktop.ViewModels"
             xmlns:loc="using:InventoryBrother.Desktop.Extensions"
             xmlns:mat="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             xmlns:matIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
             x:Class="InventoryBrother.Desktop.Views.LoginView"
             x:DataType="vm:LoginViewModel">

    <Grid>
        <!-- Corporate Blue Gradient Background -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Offset="0" Color="#0056b3"/>
                    <GradientStop Offset="1" Color="#004085"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Professional Enterprise Login Card -->
        <Border Background="White" 
                Width="420" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                CornerRadius="12"
                BoxShadow="0 10 30 0 #40000000">
            <StackPanel Spacing="32" Margin="40">
                <!-- Brand Header -->
                <StackPanel Spacing="12" HorizontalAlignment="Center">
                    <Border Background="{StaticResource PrimaryLightBrush}" Width="64" Height="64" CornerRadius="16">
                        <matIcons:MaterialIcon Kind="PackageVariant" Foreground="{StaticResource PrimaryBrush}" Width="32" Height="32"/>
                    </Border>
                    <TextBlock Text="InventoryBrother" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource PrimaryBrush}"
                               LetterSpacing="-0.5"/>
                    <TextBlock Text="ENTERPRISE ERP" 
                               FontSize="11" 
                               FontWeight="Black" 
                               LetterSpacing="2" 
                               Foreground="{StaticResource SecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Input Section -->
                <StackPanel Spacing="24">
                    <TextBox Text="{Binding Username}" 
                             mat:TextFieldAssist.Label="{loc:Localize Username}"
                             Watermark="{loc:Localize EnterUsername}"
                             Classes="outline"/>
                    
                    <TextBox Text="{Binding Password}" 
                             PasswordChar="*" 
                             mat:TextFieldAssist.Label="{loc:Localize Password}"
                             Watermark="{loc:Localize EnterPassword}"
                             Classes="outline"/>
                </StackPanel>

                <!-- Action Button -->
                <Button Command="{Binding LoginCommand}" 
                        Content="{loc:Localize LoginButton}" 
                        Classes="Primary" 
                        HorizontalAlignment="Stretch"
                        FontSize="15"
                        IsDefault="True"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="{StaticResource Danger}" 
                           FontSize="12"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           IsVisible="{Binding ErrorMessage}"/>

                <ProgressBar IsIndeterminate="True" 
                             IsVisible="{Binding IsBusy}" 
                             VerticalAlignment="Bottom"
                             Margin="0,-10,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Enterprise Footer -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="24" Spacing="4">
            <TextBlock Text="Â© 2026 InventoryBrother ERP | Secure Enterprise Edition" 
                       FontSize="11" 
                       Foreground="White"
                       Opacity="0.7"/>
            <TextBlock Text="Version 2.1.0-gold" 
                       FontSize="10" 
                       HorizontalAlignment="Center"
                       Foreground="White"
                       Opacity="0.5"/>
        </StackPanel>
    </Grid>
</UserControl>
