<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:InventoryBrother.Desktop.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="InventoryBrother.Desktop.Views.SupplierView"
             x:DataType="vm:SupplierViewModel">

    <Grid RowDefinitions="Auto, *">
        <!-- Header / Search -->
        <Border Grid.Row="0" Background="White" BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="15">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <TextBox Width="300" Watermark="Search by name or mobile..." Text="{Binding SearchText}">
                    <TextBox.KeyBindings>
                        <KeyBinding Gesture="Enter" Command="{Binding LoadSuppliersCommand}"/>
                    </TextBox.KeyBindings>
                </TextBox>
                <Button Content="Search" Classes="accent" Command="{Binding LoadSuppliersCommand}"/>
                <Button Content="Clear" Command="{Binding ClearSearchCommand}"/>
                <!-- Add Button Placeholder -->
                <Button Content="New Supplier" Classes="accent" IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- Product List -->
        <Grid Grid.Row="1" Margin="15">
            <DataGrid ItemsSource="{Binding Suppliers}"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="1" BorderBrush="LightGray"
                      CornerRadius="4">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Supplier Name" Binding="{Binding SupplierName}" Width="*"/>
                    <DataGridTextColumn Header="Mobile Number" Binding="{Binding ContactMobileNo}" Width="150"/>
                    <DataGridTextColumn Header="Contact Person" Binding="{Binding ContactPerson}" Width="150"/>
                    <DataGridTextColumn Header="Opening Bal" Binding="{Binding OpeningBalance, StringFormat='N2'}" Width="120"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding SupplierAddress}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>

            <ProgressBar IsVisible="{Binding IsBusy}" IsIndeterminate="True" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
