        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:JournalEntryViewModel}">
            <views:JournalEntryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FinancialReportsViewModel}">
            <views:FinancialReportsView/>
        </DataTemplate>
