<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:InventoryBrother.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="using:InventoryBrother.Desktop.Extensions"
        xmlns:mat="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:matIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:h="clr-namespace:Huskui.Avalonia.Controls;assembly=Huskui.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="InventoryBrother.Desktop.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{loc:Localize AppTitle}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        FlowDirection="{Binding CurrentFlowDirection}">

    <Panel>
        <!-- 1. Login View (Full Screen) -->
        <ContentControl Content="{Binding CurrentView}" 
                        IsVisible="{Binding !IsLoggedIn}" />

        <!-- 2. Main Authenticated Shell -->
        <SplitView IsVisible="{Binding IsLoggedIn}"
                   IsPaneOpen="True"
                   DisplayMode="CompactInline"
                   OpenPaneLength="260"
                   PaneBackground="#004085">
            <SplitView.Pane>
                <DockPanel>
                    <!-- Brand Section -->
                    <StackPanel DockPanel.Dock="Top" Margin="24,32,24,32">
                        <Border Background="White" Width="48" Height="48" CornerRadius="12" HorizontalAlignment="Left" Margin="0,0,0,20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.1" OffsetX="0" OffsetY="4"/>
                            </Border.Effect>
                            <matIcons:MaterialIcon Kind="Box" Foreground="#0056b3" Width="24" Height="24"/>
                        </Border>
                        <TextBlock Text="InventoryBrother" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   LetterSpacing="-0.5"/>
                        <TextBlock Text="ENTERPRISE EDITION" 
                                   FontSize="9" 
                                   FontWeight="Black"
                                   LetterSpacing="1.5" 
                                   Foreground="#A5B4FC" 
                                   Opacity="0.6"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ScrollViewer>
                        <StackPanel Spacing="4" Margin="12,0">
                            <!-- Dashboard -->
                            <Button Command="{Binding NavigateToDashboardCommand}" 
                                    Classes="nav" 
                                    Background="{Binding CurrentView, Converter={StaticResource EqualityToBrushConverter}, ConverterParameter='DashboardViewModel|#20FFFFFF|Transparent'}"
                                    VerticalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <matIcons:MaterialIcon Kind="Home" Foreground="White" Width="22" Height="22"/>
                                    <TextBlock Text="{loc:Localize Dashboard}" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <!-- POS -->
                            <Button Command="{Binding NavigateToSalesCommand}" 
                                    Classes="nav"
                                    Background="{Binding CurrentView, Converter={StaticResource EqualityToBrushConverter}, ConverterParameter='POSViewModel|#20FFFFFF|Transparent'}">
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <matIcons:MaterialIcon Kind="ShoppingCart" Foreground="White" Width="22" Height="22"/>
                                    <TextBlock Text="{loc:Localize POS}" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <!-- Inventory -->
                            <Button Command="{Binding NavigateToStockCommand}" 
                                    Classes="nav"
                                    Background="{Binding CurrentView, Converter={StaticResource EqualityToBrushConverter}, ConverterParameter='InventoryViewModel|#20FFFFFF|Transparent'}">
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <matIcons:MaterialIcon Kind="PackageVariant" Foreground="White" Width="22" Height="22"/>
                                    <TextBlock Text="{loc:Localize Inventory}" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Separator Height="1" Background="White" Opacity="0.1" Margin="12,16"/>

                            <!-- HR/Employees -->
                            <Button Command="{Binding NavigateToEmployeesCommand}" 
                                    Classes="nav"
                                    Background="{Binding CurrentView, Converter={StaticResource EqualityToBrushConverter}, ConverterParameter='EmployeeViewModel|#20FFFFFF|Transparent'}">
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <matIcons:MaterialIcon Kind="AccountGroup" Foreground="White" Width="22" Height="22"/>
                                    <TextBlock Text="{loc:Localize Employees}" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <!-- Suppliers -->
                            <Button Command="{Binding NavigateToSuppliersCommand}" 
                                    Classes="nav"
                                    Background="{Binding CurrentView, Converter={StaticResource EqualityToBrushConverter}, ConverterParameter='SupplierViewModel|#20FFFFFF|Transparent'}">
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <matIcons:MaterialIcon Kind="AccountSearch" Foreground="White" Width="22" Height="22"/>
                                    <TextBlock Text="{loc:Localize Suppliers}" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <!-- Accounting -->
                            <Button Command="{Binding NavigateToAccountingCommand}" 
                                    Classes="nav" 
                                    IsVisible="{Binding IsAdmin}"
                                    Background="{Binding CurrentView, Converter={StaticResource EqualityToBrushConverter}, ConverterParameter='AccountingViewModel|#20FFFFFF|Transparent'}">
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <matIcons:MaterialIcon Kind="Receipt" Foreground="White" Width="22" Height="22"/>
                                    <TextBlock Text="{loc:Localize Accounting}" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <!-- Settings -->
                            <Button Command="{Binding NavigateToLookupsCommand}" 
                                    Classes="nav" 
                                    IsVisible="{Binding IsAdmin}"
                                    Background="{Binding CurrentView, Converter={StaticResource EqualityToBrushConverter}, ConverterParameter='LookupViewModel|#20FFFFFF|Transparent'}">
                                <StackPanel Orientation="Horizontal" Spacing="16">
                                    <matIcons:MaterialIcon Kind="Settings" Foreground="White" Width="22" Height="22"/>
                                    <TextBlock Text="{loc:Localize Settings}" Foreground="White" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </SplitView.Pane>

            <Grid RowDefinitions="Auto, *">
                <!-- Header -->
        <Border Grid.Row="0" Height="64" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*, Auto" Margin="24,0">
                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                     <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">
                    <!-- Toggle Language -->
                    <Button Command="{Binding SetLanguageCommand}" 
                            Classes="Outline" 
                            Padding="12,6"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="{StaticResource arrow_sync_regular}" Width="14" Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="EN" IsVisible="{Binding IsPashto}" FontWeight="Bold"/>
                                    <TextBlock Text="پښتو" IsVisible="{Binding !IsPashto}" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                            
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="38" Height="38" CornerRadius="19" Background="{StaticResource PrimaryLightBrush}">
                        <PathIcon Data="{StaticResource person_regular}" Width="18" Foreground="{StaticResource PrimaryBrush}"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center" Spacing="2">
                        <TextBlock Text="Admin User" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Text="Administrator" FontSize="11" Foreground="{StaticResource MutedTextBrush}"/>
                    </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Background="{StaticResource SurfaceBrush}"/>
            </Grid>
        </SplitView>
    </Panel>
</Window>
